<h1>Patients#show</h1>
<p>Find me in app/views/patients/show.html.erb</p>

<h2><%= @patient.name %></h2>

<ol>
<% @patient.appointments.each do |appointment| %>

    <li>
        Time: <%= appointment.appointment_datetime.strftime("%B %e, %Y at %H:%M")%>
        Doctor: <%= link_to appointment.doctor.name, doctor_path(appointment.doctor)%>
    </li>

<% end %>
</ol>
